<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuBebidas"
    android:background="@drawable/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#D6D31A"
            android:backgroundTint="#009E8861"
            android:fontFamily="@font/robotolight"
            android:gravity="center"
            android:text="Selecciona Tú Bebida"
            android:textColor="@color/white"
            android:textSize="35dp"
            tools:ignore="TextContrastCheck" />


        <ImageView
            android:layout_width="199dp"
            android:layout_height="199dp"
            app:srcCompat="@drawable/icono"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:fontFamily="sans-serif"
            android:text="Ahora Selecciona una de Nuestras Mejores Bebidas Para Probar "
            android:textColor="@color/white"
            android:textSize="23dp" />


        <RadioGroup
            android:layout_width="160dp"
            android:layout_height="420dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cocacola 600ml"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radio5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:text="Piña Colada"
                android:textColor="@color/black"  />

            <RadioButton
                android:id="@+id/radio6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:text="Una Chela"
                android:textColor="@color/black" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-424dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="59dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="9dp"
                android:fontFamily="sans-serif-black"
                android:text="$20"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/ima3"
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/vacio"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bebida1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="59dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="9dp"
                android:fontFamily="sans-serif-black"
                android:text="$40"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/ima1"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:background="@drawable/vacio"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bebida2" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="59dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="9dp"
                android:fontFamily="sans-serif-black"
                android:text="$60"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/ima2"
                android:layout_width="170dp"
                android:layout_height="117dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:background="@drawable/vacio"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bebida3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/rojobajo"
                android:text="Cancelar "
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/textoss"
                android:text="Finalizar"
                app:cornerRadius="20dp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:onClick="volver"
            android:text="Volver al Inicio" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>