<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuBebidas"
    android:background="@color/Fondo_Oscuro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#D6D31A"
            android:backgroundTint="#009E8861"
            android:fontFamily="@font/robotolight"
            android:gravity="center"
            android:text="Selecciona TÃº Pizza"
            android:textColor="@color/white"
            android:textSize="35dp"
            tools:ignore="TextContrastCheck" />


        <ImageView
            android:layout_width="199dp"
            android:layout_height="199dp"
            app:srcCompat="@drawable/icono"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:text="Ahora Selecciona una de Nuestras Mejores Bebidas Para Probar "
            android:textColor="@color/white"
            android:textSize="23dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="190dp"
                android:layout_height="69dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="25dp"
                android:text="Una Deliciosa Coquita de 600ml"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="59dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="9dp"
                android:text="$20"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/white"
                />

            <ImageButton
                android:id="@+id/ima3"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@color/Fondo_Oscuro"
                app:srcCompat="@drawable/bebida1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="190dp"
                android:layout_height="89dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="34dp"
                android:text="Una Rica Margarita Bien Helada con Espoma y Vino"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="59dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="29dp"
                android:text="$40"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/white"
                />

            <ImageButton
                android:id="@+id/ima4"
                android:layout_marginTop="30dp"
                android:layout_width="100dp"
                android:scaleType="fitCenter"
                android:background="@color/Fondo_Oscuro"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bebida2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="199dp"
                android:layout_height="99dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="6dp"
                android:text="Una Enorme Taza de Chela Bien Fria con Doble Llenado "
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="59dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif-black"
                android:text="$5|0"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/ima5"
                android:layout_marginTop="30dp"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:background="@color/Fondo_Oscuro"
                android:layout_weight="1"
                app:srcCompat="@drawable/bebida3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/rojobajo"
                android:text="Cancelar "
                app:cornerRadius="20dp"
                />
            <Button
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cornerRadius="20dp"
                android:text="Finalizar"
                android:backgroundTint="@color/colorBoton"
                />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>