<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"

    android:background="@color/Fondo_Oscuro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#D6D31A"
            android:backgroundTint="#009E8861"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Bienvenido a"
            android:textColor="@color/white"
            android:textSize="45dp"
            tools:ignore="TextContrastCheck" />

        <TextView

            android:layout_width="320dp"
            android:layout_height="50dp"
            android:text="La PizzerÃ­a Vito Lugini"
            android:fontFamily="@font/robotolight"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="37dp"
            />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/icono"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="390dp"
            android:layout_height="159dp"
            android:layout_marginTop="40dp"
            android:text="Hola mi Estimado "
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:fontFamily="sans-serif"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ima1"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/Fondo_Oscuro"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/comida" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bebidass" />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>