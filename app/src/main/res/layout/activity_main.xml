<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Fondo_Oscuro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#D6D31A"
            android:backgroundTint="#009E8861"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Inicia SesiÃ³n para Acceder"
            android:textColor="@color/white"
            android:textSize="33dp" />


        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/icon1"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/text0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/grisparatexto"
            android:hint=" Ingrese Usuario"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/grisparatexto"
            tools:ignore="DuplicateIds" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/teal_700"
            android:onClick="Login"
            android:text="@string/button1"
            app:cornerRadius="20dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>